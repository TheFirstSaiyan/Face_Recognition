<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nikhileshwar.frontcameratest.SecondaryActivity">
    <Button
        android:id="@+id/take_image_from_camera"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Take Photo From Camera"
        android:layout_above="@+id/image_from_camera"
        android:layout_alignEnd="@+id/image_from_camera"
        android:layout_marginBottom="23dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</LinearLayout>
